const ContactForm = ({ contactId = null, onBack, onSave }) => {
    const [formData, setFormData] = useState({
        name: '',
        email: '',
        phone: '',
        document_number: '',
        address: '',
        city_id: '',
        notes: '',
        source: ''
    });
    const [cities, setCities] = useState([]);
    const [loading, setLoading] = useState(false);
    const [errors, setErrors] = useState({});

    useEffect(() => {
        const fetchCities = async () => {
            try {
                const { data, error } = await supabase.from('cities').select('id, name').order('name');
                setCities(error ? [
                    { id: '1', name: 'Santo Domingo' },
                    { id: '2', name: 'Santiago' },
                    { id: '3', name: 'La Romana' }
                ] : data || []);
            } catch (err) {
                setCities([{ id: '1', name: 'Santo Domingo' }]);
            }
        };

        fetchCities();

        if (contactId) {
            const fetchContact = async () => {
                try {
                    const { data, error } = await supabase.from('contacts').select('*').eq('id', contactId).single();
                    if (!error && data) {
                        setFormData({
                            name: data.name || '',
                            email: data.email || '',
                            phone: data.phone || '',
                            document_number: data.document_number || '',
                            address: data.address || '',
                            city_id: data.city_id || '',
                            notes: data.notes || '',
                            source: data.source || ''
                        });
                    }
                } catch (err) {
                    console.error('Error fetching contact for edit:', err);
                }
            };
            fetchContact();
        }
    }, [contactId]);

    const handleSubmit = async () => {
        setLoading(true);
        setErrors({});

        try {
            const newErrors = {};
            if (!formData.name.trim()) newErrors.name = 'El nombre es requerido';
            if (formData.email && !/\S+@\S+\.\S+/.test(formData.email)) {
                newErrors.email = 'Email inv√°lido';
            }

            if (Object.keys(newErrors).length > 0) {
                setErrors(newErrors);
                return;
            }

            const dataToSend = {};
            if (formData.name.trim()) dataToSend.name = formData.name.trim();
            if (formData.email.trim()) dataToSend.email = formData.email.trim();
            if (formData.phone.trim()) dataToSend.phone = formData.phone.trim();
            if (formData.document_number.trim()) dataToSend.document_number = formData.document_number.trim();
            if (formData.address.trim()) dataToSend.address = formData.address.trim();
            if (formData.city_id) dataToSend.city_id = formData.city_id;
            if (formData.notes.trim()) dataToSend.notes = formData.notes.trim();
            if (formData.source) dataToSend.source = formData.source;

            if (!contactId) {
                const { data, error } = await supabase.from('contacts').insert(dataToSend).select();
                if (error) throw new Error(error.message || 'Error al crear el contacto');
                console.log('Contact created successfully:', data);
            } else {
                const { data, error } = await supabase.from('contacts').update(dataToSend).eq('id', contactId).select();
                if (error) throw new Error(error.message || 'Error al actualizar el contacto');
                console.log('Contact updated successfully:', data);
            }
            
            if (onSave) onSave(formData);
            onBack();
        } catch (error) {
            setErrors({ general: error.message || 'Error al guardar el contacto' });
        } finally {
            setLoading(false);
        }
    };

    const handleChange = (field, value) => {
        setFormData(prev => ({ ...prev, [field]: value }));
        if (errors[field]) setErrors(prev => ({ ...prev, [field]: '' }));
    };

    return (
        <div className="min-h-screen bg-gray-50">
            <div className="bg-white border-b border-gray-200 px-4 py-4">
                <div className="flex items-center justify-between">
                    <div className="flex items-center space-x-4">
                        <Button variant="ghost" onClick={onBack} icon={<ArrowLeft className="w-4 h-4" />} size="sm">
                            Volver
                        </Button>
                        <div>
                            <h1 className="text-xl font-bold text-gray-900">
                                {contactId ? 'Editar Contacto' : 'Nuevo Contacto'}
                            </h1>
                            <p className="text-sm text-gray-600">
                                {contactId ? 'Modifica la informaci√≥n del contacto' : 'Agrega un nuevo contacto a tu base de datos'}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div className="p-4 max-w-4xl mx-auto">
                <Card>
                    <div className="p-6 space-y-6">
                        {errors.general && (
                            <div className="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg">
                                <p className="text-red-600 text-sm">{errors.general}</p>
                            </div>
                        )}

                        <div>
                            <h3 className="text-lg font-semibold text-gray-900 mb-4">Informaci√≥n B√°sica</h3>
                            <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <Input
                                    label="Nombre completo *"
                                    value={formData.name}
                                    onChange={(e) => handleChange('name', e.target.value)}
                                    error={errors.name}
                                    placeholder="Ej: Juan P√©rez Gonz√°lez"
                                />
                                <Input
                                    label="C√©dula"
                                    value={formData.document_number}
                                    onChange={(e) => handleChange('document_number', e.target.value)}
                                    placeholder="Ej: 001-1234567-8"
                                />
                            </div>
                        </div>

                        <div>
                            <h3 className="text-lg font-semibold text-gray-900 mb-4">Informaci√≥n de Contacto</h3>
                            <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <Input
                                    label="Email"
                                    type="email"
                                    value={formData.email}
                                    onChange={(e) => handleChange('email', e.target.value)}
                                    error={errors.email}
                                    placeholder="ejemplo@email.com"
                                />
                                <Input
                                    label="Tel√©fono"
                                    value={formData.phone}
                                    onChange={(e) => handleChange('phone', e.target.value)}
                                    placeholder="Ej: +1 809-555-0123"
                                />
                            </div>
                        </div>

                        <div>
                            <h3 className="text-lg font-semibold text-gray-900 mb-4">Direcci√≥n</h3>
                            <div className="space-y-4">
                                <Input
                                    label="Direcci√≥n"
                                    value={formData.address}
                                    onChange={(e) => handleChange('address', e.target.value)}
                                    placeholder="Ej: Av. Winston Churchill #123"
                                />
                                <Select
                                    label="Ciudad"
                                    value={formData.city_id}
                                    onChange={(e) => handleChange('city_id', e.target.value)}
                                >
                                    <option value="">Seleccionar ciudad</option>
                                    {cities.map(city => (
                                        <option key={city.id} value={city.id}>{city.name}</option>
                                    ))}
                                </Select>
                            </div>
                        </div>

                        <div>
                            <h3 className="text-lg font-semibold text-gray-900 mb-4">Informaci√≥n Adicional</h3>
                            <div className="space-y-4">
                                <Select
                                    label="Fuente"
                                    value={formData.source}
                                    onChange={(e) => handleChange('source', e.target.value)}
                                >
                                    <option value="">Seleccionar fuente</option>
                                    <option value="Referido">Referido</option>
                                    <option value="Sitio Web">Sitio Web</option>
                                    <option value="Facebook Ads">Facebook Ads</option>
                                    <option value="Google Ads">Google Ads</option>
                                    <option value="WhatsApp">WhatsApp</option>
                                    <option value="Instagram">Instagram</option>
                                    <option value="LinkedIn">LinkedIn</option>
                                </Select>
                                <Textarea
                                    label="Notas"
                                    value={formData.notes}
                                    onChange={(e) => handleChange('notes', e.target.value)}
                                    placeholder="Informaci√≥n adicional sobre el contacto"
                                />
                            </div>
                        </div>

                        <div className="flex space-x-4 pt-6 border-t border-gray-200">
                            <Button
                                onClick={handleSubmit}
                                disabled={loading}
                                icon={loading ? <RefreshCw className="w-4 h-4 animate-spin" /> : null}
                            >
                                {loading ? 'Guardando...' : (contactId ? 'Actualizar' : 'Crear Contacto')}
                            </Button>
                            <Button variant="outline" onClick={onBack} disabled={loading}>
                                Cancelar
                            </Button>
                        </div>
                    </div>
                </Card>
            </div>
        </div>
    );
};

// Componente principal
const ContactsManagement = () => {
    const [currentView, setCurrentView] = useState('list');
    const [selectedContactId, setSelectedContactId] = useState(null);
    const [showEditModal, setShowEditModal] = useState(false);
    const [contactToEdit, setContactToEdit] = useState(null);

    const handleSelectContact = (contactId) => {
        setSelectedContactId(contactId);
        setCurrentView('detail');
    };

    const handleCreateContact = () => {
        setSelectedContactId(null);
        setCurrentView('create');
    };

    const handleEditContact = async (contactId) => {
        try {
            console.log('üìù Iniciando edici√≥n de contacto:', contactId);
            
            const { data, error } = await supabase
                .from('contacts')
                .select('*')
                .eq('id', contactId)
                .single();

            if (error) {
                console.error('‚ùå Error cargando contacto para editar:', error);
                alert('Error al cargar el contacto');
                return;
            }

            console.log('‚úÖ Contacto cargado para edici√≥n:', data);
            setContactToEdit(data);
            setShowEditModal(true);
        } catch (err) {
            console.error('‚ùå Error general:', err);
            alert('Error al cargar el contacto');
        }
    };

    const handleEditFromDetail = (contactId) => {
        handleEditContact(contactId);
    };

    const handleCloseEditModal = () => {
        setShowEditModal(false);
        setContactToEdit(null);
    };

    const handleSaveContact = (updatedContact) => {
        console.log('‚úÖ Contacto guardado exitosamente:', updatedContact);
        setShowEditModal(false);
        setContactToEdit(null);
        
        if (currentView === 'detail') {
            setCurrentView('list');
            setTimeout(() => {
                setSelectedContactId(updatedContact.id);
                setCurrentView('detail');
            }, 100);
        }
    };

    const handleBack = () => {
        setCurrentView('list');
        setSelectedContactId(null);
    };

    const handleSave = (contactData) => {
        console.log('Guardando contacto:', contactData);
        setCurrentView('list');
    };

    return (
        <div className="min-h-screen bg-gray-50">
            {currentView === 'list' && (
                <ContactsList
                    onSelectContact={handleSelectContact}
                    onCreateContact={handleCreateContact}
                    onEditContact={handleEditContact}
                />
            )}

            {currentView === 'detail' && selectedContactId && (
                <ContactDetail
                    contactId={selectedContactId}
                    onBack={handleBack}
                    onEdit={handleEditFromDetail}
                />
            )}

            {(currentView === 'create' || currentView === 'edit') && (
                <ContactForm
                    contactId={currentView === 'edit' ? selectedContactId : null}
                    onBack={handleBack}
                    onSave={handleSave}
                />
            )}

            {showEditModal && contactToEdit && (
                <ContactEditModal
                    contact={contactToEdit}
                    onClose={handleCloseEditModal}
                    onSave={handleSaveContact}
                />
            )}
        </div>
    );
};

export default ContactsManagement;